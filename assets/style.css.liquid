
:root {
    --max-page-width: 1200px;
    --min-page-width: 320px;
    --page-width: min(calc(100% - 2rem), var(--max-page-width));
}

body {
    width: var(--page-width);
    max-width: var(--max-page-width);
    min-width: var(--min-page-width);
    margin-inline: auto;
    background-color: {{ settings.bg }};
    color: {{ settings.text_color }}
}

body a {
    color: {{ settings.link_color }};
}

body a:visited {
    color: {{ settings.link_visited_color }};
}

.button {
  backface-visibility: hidden;
  border: 0;
  box-sizing: border-box;
  cursor: pointer;
  display: inline-block;
  padding: 1rem 1.25rem;
  position: relative;
  text-align: left;
  text-decoration: none;
  transform: translateZ(0) scale(1);
  transition: transform .2s;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
}

.button:disabled {
  color: #787878;
  cursor: auto;
}

.button:not(:disabled):hover {
  transform: scale(1.05);
}

.button:not(:disabled):hover:active {
  transform: scale(1.05) translateY(.125rem);
}

.button:focus {
  outline: 0 solid transparent;
}

.button:focus:before {
  border-width: .125rem;
  content: "";
  left: calc(-1*.375rem);
  pointer-events: none;
  position: absolute;
  top: calc(-1*.375rem);
  transition: border-radius;
  user-select: none;
}

.button:focus:not(:focus-visible) {
  outline: 0 solid transparent;
}

.button:not(:disabled):active {
  transform: translateY(.125rem);
}

.primary-text {
  border-radius: .375rem;
  border-style: solid;
  border: 1px solid {{ settings.text_color }};
  font-size: 1.125rem;
  font-weight: 400;
  letter-spacing: -.01em;
  line-height: 1.3;
  background: {{ settings.bg }};
  color: {{ settings.text_color }};
}

.primary-btn {
  border-radius: .375rem;
  font-size: 1.125rem;
  font-weight: 700;
  letter-spacing: -.01em;
  line-height: 1.3;
  background: {{ settings.link_color }};
  color: {{ settings.bg }};
}

.text-button-label {
    display: inline-block;
    border-radius: none;
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.3;
    background-color: {{ settings.link_color }};
    color: {{ settings.bg }};
}

.field-large {
    padding: .5rem 1.5rem;
}

.field-small {
  padding: .3rem .5rem;
  font-size: .875rem;
  font-weight: 400;
  line-height: 1rem;
}

.paginate-legend .page.current {
  margin-right: 1rem;
}

.paginate-legend .page a,
.paginate-legend .page a:visited {
  text-decoration: none;
  margin-right: 1rem;
  color: {{ settings.link_color }};
}

.paginate-legend .prev a,
.paginate-legend .next a {
  text-decoration: none;
  margin-right: 1rem;
  color: {{ settings.link_color }};
}

.mg-b-small {
    margin-bottom: .5rem;
}

.mg-b-1rem {
  margin-bottom: 1rem;
}

.mg-t-small {
  margin-top: .5rem;
}

.mg-l-small {
  margin-left: .5rem;
}

.mg-l-1rem {
  margin-left: 1rem;
}

.text-left {
    text-align: left;
}

.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}
