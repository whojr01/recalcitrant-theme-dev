.section-product {
    width: var(--page-width);
}

.product {
    display: flex;
    margin: 2rem auto;
    /* justify-content: center; */
    /* align-items: center; */
    outline: 1px solid white;
}

.product-image {
    flex-basis: 50%;
}

.product-image img {
    display: block;
    max-width: 100%;
}

.product-info {
    padding-inline: 2rem;
    padding-block: 1rem .5rem;
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
}

.product-info form {
    display: flex;
    flex-direction: column;
}

.product-info h3,
.product-info p {
    margin: 0;
    margin-bottom: 1rem;
}

.product-info label {
    {% comment %} display: block; {% endcomment %}
    margin-block: .5rem .5rem;
}

.product-info #product-quanity {
    margin-bottom: 1rem;
}

.product-options fieldset {
    border: none;
    display: flex;
    flex-wrap: wrap;
}

.product-options legend {
    text-align: left;
}

.product-info .radio-selections {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    row-gap: 0;
    column-gap: 1rem;
    width: 100%;
}

.product-info input[type="radio"] {
    position: absolute;
    opacity: 0;
}

.product-info input[type="radio"]:checked ~ label {
    background-color: {{ settings.link_color }};
    color: {{ settings.bg }};
    border-color: {{ settings.bg }};
    outline: 1px solid #ffffff;
}


.product-info .radio-btn {
    border-radius: .375rem;
    font-size: 1.125rem;
    font-weight: 500;
    line-height: 1.3;
    border: 4px double {{ settings.link_color }};
    color: {{ settings.link_color }};
}

.inline {
    display: inline;
}


.product-info .radio-btn:last-child {
    margin-bottom: 1rem;
}

.product-prices {
    display: flex;
    gap: 2rem;
}

.product-price-compare {
    text-decoration-line: line-through;
}

.product-image-thumbs {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    list-style-type: none;
}

.quanity-selector {
    display: flex;
    justify-content: center;
    gap: .5rem;
    align-items: baseline;
    line-height: 23.4px;
    margin-top: 1.5rem;
}

#product-quanity {
    color: {{ settings.link_color }};
    border-color: {{ settings.link_color }};
    width: 2ch;
}

.quanity-selector-minus,
.quanity-selector-plus {
    background-color: #2d1414;
    border: none;
}

.hide {
    display: none;
}

.selected {
    border: 1px solid #ff0000;
}

.quanity-selector-minus .icon,
.quanity-selector-plus .icon {
    width: 1rem;
    height: 1rem;
    stroke: {{ settings.link_color }};
}



@media only screen and (max-width: 740px) {
    .product {
        flex-wrap: wrap;
    }
}

